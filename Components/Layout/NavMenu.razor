@using Microsoft.Maui.Devices
@using System

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <p class="navbar-brand" href="">UsgphPlanning</p>
    </div>
</div>
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Gestion des lieux
            </NavLink>
        </div>

        <!-- Additional nav items can be added here if needed -->

        <div class="nav-item-logout px-3 position-absolute bottom-0 start-0 w-100">
            <div class="nav-item-logout px-3 position-absolute bottom-0 start-0 w-100">
                <a href="#" class="nav-link text-danger" @onclick:preventDefault @onclick="QuitApplication">
                    <span class="bi bi-box-arrow-left me-2" aria-hidden="true"></span>
                    Quitter l'application
                </a>
            </div>
        </div>
    </nav>
</div>

<style>
    .nav-item-logout {
        border-top: 1px solid rgba(255,255,255,0.1);
        margin-bottom: 10px;
    }

        .nav-item-logout .nav-link {
            transition: background-color 0.3s ease;
        }

            .nav-item-logout .nav-link:hover {
                background-color: rgba(255,0,0,0.1);
            }

    .nav-scrollable {
        position: relative;
        height: 100vh;
    }
</style>

@code {
    @inject NavigationManager NavigationManager

    private async Task QuitApplication()
    {
        bool result = await Application.Current.MainPage.DisplayAlert(
            "Confirmation",
            "Voulez-vous vraiment quitter l'application ?",
            "Quitter",
            "Annuler");

        if (result)
        {
            Application.Current.Quit();
            
        }
    }
}